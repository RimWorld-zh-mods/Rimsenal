<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>DisassembleMRS-R</defName>
    <label>disassemble modular rifle</label>
    <description>Disassemble modular rifles into a MRS-R kit and modular carbine.</description>
    <jobString>Disassemble modular rifle.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>50</workAmount>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
      <categories>
        <li>GDWeapons</li>
      </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>GDWeapons</li>
      </categories>
      <exceptedThingDefs>
        <li>GD_ModularDMR</li>
        <li>GD_ModularLMG</li>
        <li>GD_TacticalPistol</li>
        <li>GD_GrenadeLauncher</li>
        <li>GD_HVSMG</li>
        <li>GD_ModularCarbine</li>	
        <li>GD_INGrenadeLauncher</li>
        <li>GD_SKGrenadeLauncher</li>
        <li>GD_BSLauncher</li>
      </exceptedThingDefs>
    </fixedIngredientFilter>
    <products>
      <MRSKitR>1</MRSKitR>
      <GD_ModularCarbine>1</GD_ModularCarbine>
    </products>
    <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>GDTable</li>
      </recipeUsers>
  </RecipeDef>

